<h1>Cats Index</h1>

<%if @agency%>
  <h4>Cats at <%=link_to @agency.name, agency_path(@agency)%></h4>

  <%@agency.cats.adoptable.each do |c|%>
  <ul><%=link_to c.name, agency_cat_path(c.agency, c)%> -<%=c.breed%></ul>
  <%end%>
  <%else%>
  <h4>All Cats</h4>
  <h3>Filter Cats:</h3>
    <%= form_tag('/cats/filter', method: "get") do %>
    <%= select_tag :state, options_for_select(us_states), include_blank: true %>
    <%= submit_tag "Filter by State" %>

    <%= select_tag :breed, options_for_select(Cat.all_adoptable_breeds), include_blank: true %>
    <%= submit_tag "Filter by Breed" %>

 <% end %>

 <%=link_to 'Sort By Cost', cats_filter_by_cost_path%>

  <% @cats.each do |c| %>
  <ul>
    <div><%@cats.each do |cat|%>
    <button class="cats-index-list" id="<%=cat.id%>" onClick="catShowPage(this.id)">
        <p class="cat-id" data-id="<%=cat.id%>"><%=cat.id%></p>
        <img id="cat-image" src=<%=cat.image%>>
        <p><%=cat.name%></p>
        <p><%=cat.breed%></p>
        <p><%=cat.state%>
          <p>$<%=cat.cost%>
        </button>
        <%end%>
      </div>

      </ul>
  <%end%>

  <%end%>
<br><br><br>
