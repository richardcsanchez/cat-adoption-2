<h1 class="agency-name-header" id="agency_name"><%= @agency.name %></h1>
<h4 class="agency_info"><%= @agency.email%></h4>
<h4 class="agency_info"><%= number_to_phone(@agency.phone_number)%></h4>

<div class="agency_address">
  <p>
    <%=@agency.street_1%><br>
    <%=@agency.street_2%><br>
    <%=@agency.city%>
    <%=@agency.state%>
    <%=@agency.zip_code%>
  </p>
  </div>
  <% if current_user.admin? %>
  <button class = "small-button" id='edit-agency'onClick = 'editAgency()'>Edit Agency</button>
  <%end%>
<br>
<br>
<%= link_to "Cats at this Agency", agency_cats_path(@agency.id)%>

<%if current_user.admin?%>
<%= link_to "New Cat", new_agency_cat_path(@agency.id)%>
<%end%>
<br>
<br>


<div class="tab">
  <button class="tablinks" onclick="openTab(event, 'Cats')">Cats at this Agency</button>
  <button class="tablinks" onclick="openTab(event, 'New Cat')">New Cat</button>
</div>

<div id="Cats" class="tabcontent">
    <% @agency.cats.adoptable.each do |c| %>
    <button id="cats-index-button" class="cats-index-list" >
      <img id="cat-image" src=<%=c.image%>>
        <p id="cat-name"><%=link_to c.name, agency_cat_path(c.agency, c)%></p>
        <p id="cat-name"><%=c.breed%></p>

        <p id="more-cat-info" status="hidden"><%=c.disposition%></p>
      </button>
    <%end%>
</div>

<div id="New Cat" class="tabcontent">

  <div id="new cat form">
    <%=render "cats/form"%>
  </div>

  <div id="postResult">
    <h2 id="catName"></h2>
    </div>
</div>


<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<script type="text/javascript" charset="utf-8">
function openTab(evt, tab) {
  var i, tabcontent, tablinks;

  tabcontent = document.getElementsByClassName("tabcontent");
  for (i = 0; i < tabcontent.length; i++) {
    tabcontent[i].style.display = "none";
  }

  tablinks = document.getElementsByClassName("tablinks");
  for (i = 0; i < tablinks.length; i++) {
    tablinks[i].className = tablinks[i].className.replace(" active", "");
  }

  document.getElementById(tab).style.display = "block";
  evt.currentTarget.className += " active";

}

function moreCatInfo() {
  document.getElementById("more-cat-info").hidden = false
};

